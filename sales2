CREATE TABLE salessales2 (
    sale_id INT PRIMARY KEY,
    salesperson VARCHAR(50),
    region VARCHAR(50),
    product VARCHAR(50),
    quantity INT,
    sale_amount DECIMAL(10,2)
);

